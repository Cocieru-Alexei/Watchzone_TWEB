@{
    ViewBag.Title = "Luxury Watches";
}

<!-- Luxury Watches Header -->
<header class="product-header py-5 text-center bg-light">
    <div class="container">
        <h1>Luxury Watches Collection</h1>
        <p>Timeless elegance and superior craftsmanship</p>
    </div>
</header>

<!-- Luxury Watches Products -->
<section class="products-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 mb-4">
                <div class="card product-card h-100">
                    <img src="~/Images/luxury cartier_santos.jpg" class="card-img-top" alt="Cartier Santos">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Cartier Santos de Cartier</h5>
                        <p class="card-text">Classic square case design with exposed screws, sword-shaped hands, and QuickSwitch strap system.</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">$6,999.99</span>
                                <div class="button-container">
                                    <a href="@Url.Action("WatchDetail", "Home", new { id = "1", type = "luxury" })" class="btn btn-outline-primary me-2 visible-btn">View Watch</a>
                                    <button class="btn btn-primary visible-btn" data-action="add-to-cart">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <p>Discover our exquisite collection of luxury watches that represent the pinnacle of watchmaking craftsmanship.</p>
            <p>Our luxury timepieces combine traditional watchmaking techniques with modern design and innovative materials.</p>
        </div>
    </div>
</section> 