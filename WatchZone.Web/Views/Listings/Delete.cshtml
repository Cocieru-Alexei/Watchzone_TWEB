@model WatchZone.Domain.Model.Listing

@{
    ViewBag.Title = "Delete Listing";
}

<div class="container">
    <h2>Delete Listing</h2>
    <h4>Are you sure you want to delete this listing?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">$@Model.Price</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
    </dl>
    <form method="post" action="@Url.Action("Delete", new { id = Model.Listings_Id })">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </form>
</div> 